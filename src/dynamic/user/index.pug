doctype html
include ../includes/head.pug
body
  include ../includes/nav.pug
  #content
    span.header
        img.icon(src=userProfile.displayAvatarURL() width="100px")
        h1 #{userProfile.username}
        .badge-holder
            if (admin)
                span.badge
                    img(src='https://cdn.glitch.com/a84c50de-9fbd-4364-b942-93a678c2a87d%2Ffavpng_software-developer-programmer-software-development-computer-software.png?v=1610411983323' title='Website Developers')
                    |  Website Developers
    #cards
        each val, i in cards
            div.card
                if (val.nsfw)
                    img.icon.nsfw(src=val.logo)
                else
                    img.icon(src=val.logo)
                h2.title #{val.username}
                    a.likes(href=`/bots/like/${val.botid}`)
                        i.far.fa-heart
                        | #{val.likes || 0}
                p.desc #{val.description}
                a.small.button(href=`/bots/${val.botid}`) View Bot
