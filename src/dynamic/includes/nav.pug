#navTop
    span.nav.link
        img(src='https://media.discordapp.net/attachments/764398216942714890/796905521268523018/94b9bcfe-98af-44f6-aac6-4b690082f98c_19f2852935ec745d6a1ab1397b3118ab.png?width=115&height=115')
    span.navtag.keep
        a(href="/")
            span.navtext.keep Rlist
        include arrow.pug
        if (bot && !site_key) 
            a(href=`/bots/${bot.botid}`)
                span.navtext #{bot.username}
            include arrow.pug
            a(href=`/api/embed/${bot.botid}` target="_blank")
                span.navtext Embed
        if ((req.baseUrl == "/user" || req.baseUrl == "/me") && userProfile)
            a(href=`/user/${userProfile.id}`)
                span.navtext #{userProfile.username}
        if (req.baseUrl == "/tag")
            a(href=`/tag/${tag}`)
                span.navtext.capitalise #{tag}
    a#searcher.navtag.search(href='/bots/search/')
        #search.navtext
            i.fas.fa-search
            |  Search
    span.dropdown
        if (req.user)
            a#login.navtag.keep(href='/login') #{req.user.username}##{req.user.discriminator}
            span.dd-content
                a(href='/join' target='_blank') Join Server
                br
                a(href='/add') Add bot
                br
                a(href='/api/theme') Toggle Theme
                br
                a(href='/about') About
                if (req.user.staff)
                    br
                    a(href='/admin') Dashboard
                br
                a(href='/logout') Logout
        else
            a#login.navtag.keep(href='/login') Login
